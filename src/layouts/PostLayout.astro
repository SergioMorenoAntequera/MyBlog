---
import MainLayout from "./MainLayout.astro";

export interface Props {
	content: {
		title: string
		description: string
		pubDate?: string
		heroImage?: string
	};
}

const { content: { title, description, pubDate, heroImage }}: Props = Astro.props;
---

<MainLayout>
	<div class="flex justify-center mt-10">	
		<div class="max-w-xl">
			<h1 class="title"> {title} </h1>
			<p> {description} </p>

			{heroImage && (
				<img
					width={720}
					height={360}
					src={heroImage}
					alt=""
				/>
			)}
			{pubDate && <time>{pubDate}</time>}
			<hr/>
			
			<slot/>
		</div>
	</div>
</MainLayout>
