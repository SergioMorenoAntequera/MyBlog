---
import HeaderLink from './HeaderLink.astro';
type Props = { accountForHeader: boolean}
const { accountForHeader = true } = Astro.props
---
<style lang="sass">
	header 
		position: fixed
		width: 100%
		top: 0
		left: 0
		padding: 1em
	.header-gap 
		height: 40px

	nav
		display: flex
		justify-content: space-between 

	ul
		display: flex
		list-style: none
		margin: 0
		padding: 0
		gap: 1em
		
</style>

<header>
	<nav>
		<ul>
			<HeaderLink href="/"> Logo </HeaderLink>
		</ul>
		<ul>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="https://www.linkedin.com/in/seran-moreno/" target="_blank"> LinkedIn </HeaderLink>
			<HeaderLink href="https://github.com/SergioMorenoAntequera" target="_blank"> GitHub </HeaderLink>
		</ul>
	</nav>
</header>
{ accountForHeader && <div class="header-gap"/> }

